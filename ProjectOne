import numpy as np

A = np.zeros(25,25)
b = np.zeros(25,1)

def change_index(row, col):
    return (row*5) + col

for i in range(0,5):
    for j in range(0,5):
        index = change_index(i,j)
        A[index,index] = 4

        if i>0:
            A[index, change_index(i-1, j)] = -1
        if i<4:
            A[index, change_index(i+1, j)] = -1
        if j>0:
            A[index, change_index(i, j-1)] = -1
        if j>4:
            A[index, change_index(i, j+1)] = -1

        

